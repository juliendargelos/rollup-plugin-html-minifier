{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
